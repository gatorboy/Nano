<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <!-- Since we are using the toolbar, we need to remove the action, and hence we inherit from the NoActionBar theme -->
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- This is color of the bar where the signal strength and other phone indicators are displayed -->
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppTheme.AppBar</item>
    </style>
    <style name="AppTheme.AppBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <style name="app_buttons">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:background">@color/udacity</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/margin_end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:onClick">appOpen</item>
    </style>

    <style name="detail_margins">
        <item name="android:paddingEnd">@dimen/movie_detail_padding_end</item>
        <item name="android:paddingLeft">@dimen/movie_detail_padding_start</item>
        <item name="android:paddingRight">@dimen/movie_detail_padding_end</item>
        <item name="android:paddingStart">@dimen/movie_detail_padding_start</item>
    </style>
</resources>
