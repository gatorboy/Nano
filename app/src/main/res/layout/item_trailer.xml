<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="@dimen/trailer_padding"
        android:id="@+id/trailer_thumbnail"
        android:layout_height="@dimen/trailer_height"
        android:layout_width="@dimen/trailer_width"
        fresco:placeholderImageScaleType="fitXY"/>

    <ImageView
        android:id="@+id/play"
        android:src="@android:drawable/ic_media_play"
        android:layout_gravity="center"
        android:layout_height="@dimen/play_height"
        android:layout_width="@dimen/play_width"/>
</FrameLayout>